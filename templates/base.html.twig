            <nav>
                <ul>
                    {% if not app.user %}
                        <li><a href="{{ path('app_home') }}">Accueil</a></li>
                        <li><a href="{{ path('app_register') }}">S'inscrire</a></li>
                        <li><a href="{{ path('app_login') }}">Se connecter</a></li>
                    {% else %}
                        <li><a href="{{ path('app_home') }}">Accueil</a></li>
                        <li><a href="{{ path('app_products') }}">Boutique</a></li>
                        {% if is_granted('ROLE_ADMIN') %}
                            <li><a href="{{ path('app_admin') }}">Back-Office</a></li>
                        {% elseif is_granted('ROLE_USER') %}
                            <li><a href="{{ path('app_cart') }}">Panier</a></li>
                        {% endif %}
                        <li><a href="{{ path('app_logout') }}">Se déconnecter</a></li>
                    {% endif %}
                </ul>
            </nav>

        </header>

    </head>
    <body>
        {% block body %}{% endblock %}
    </body>
    <footer class="footer">
        <div class="footer-row">
            <div class="label">Nom de la société :</div>
            <div class="value">Stubborn</div>
        </div>
        <div class="footer-row">
            <div class="label">Adresse :</div>
            <div class="value">Piccadilly Circus, London W1J 0DA, Royaume-Uni</div>
        </div>
        <div class="footer-row">
            <div class="label">Adresse de contact :</div>
            <div class="value">stubborn@blabla.com</div>
        </div>
    </footer>

    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}

</html>
