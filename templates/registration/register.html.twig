{% extends 'base.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block stylesheets %}<link rel="stylesheet" href="{{ asset('css/register.css') }}">{% endblock %}

{% block body %}
    <h1>S'inscrire</h1>
    <div class="form-container">
        {{ form_start(registrationForm, {'attr': {'class': 'registration-form'}}) }}
        
        <div class="form-group">
            {{ form_label(registrationForm.name, 'Nom utilisateur :') }}
            {{ form_widget(registrationForm.name, {'attr': {'placeholder': 'johndoe'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(registrationForm.email, 'Adresse mail :') }}
            {{ form_widget(registrationForm.email, {'attr': {'placeholder': 'johndoe@gmail.com'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(registrationForm.delivery_address, 'Adresse de livraison :') }}
            {{ form_widget(registrationForm.delivery_address, {'attr': {'placeholder': '8 rue du bac 54100 Nancy'}}) }}
        </div>

        <div class="form-group">
            {{ form_row(registrationForm.plainPassword) }}
        </div>

        <div class="form-group">
            {{ form_row(registrationForm.agreeTerms) }}
        </div>

        <button type="submit" class="btn btn-primary">Créer un compte</button>

        {{ form_end(registrationForm) }}

        <div class="login-link">
            <p>Déjà inscrit ? </p>
            <a href="{{ path('app_login') }}" class="btn btn-primary">Se connecter</a>
        </div>
    </div>
{% endblock %}
